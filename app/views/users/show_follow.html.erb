<% provide(:title, @title) %>

<h3><%= @user.nickname %>さんの<%= @title %></h3>

<% @users.each do |user| %>
  <div>
    <%= link_to user_path(user.id) do %>
      <%= attachment_image_tag user, :profile_image, format: "jpeg", fallback: "noimage-1-760x460.png", size: "100x100" %>
    <% end %>
    <p>
      <%= link_to user_path(user.id) do %>
        <%= user.nickname %>
      <% end %>
    </p>
    <p>
      フォロー数：
      <a href="<%= following_user_path(user) %>">
        <%= user.following.count %>
      </a>
    </p>
    <p>
      フォロワー数：
      <a href="<%= followers_user_path(user) %>">
        <%= user.followers.count %>
      </a>
    </p>
    <p>
      <% if user.spots.present? %>
        最終更新日：<%= user.spots.order(:updated_at).last.updated_at.strftime('%Y年%-m月%-d日') %>
      <% else %>
        投稿なし
      <% end %>
    </p>
  </div>
<% end %>

<%= paginate @users %>