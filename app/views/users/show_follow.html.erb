<% provide(:title, @title) %>

<h3><%= @user.nickname %>さんの<%= @title %></h3>

<% @users.each do |user| %>
  <div>
    <%= link_to user_path(user.id) do %>
      <%= attachment_image_tag user, :profile_image, format: "jpeg", fallback: "noimage-1-760x460.png", size: "100x100" %>
    <% end %>
    <p>
      <%= link_to user_path(user.id) do %>
        <%= user.nickname %>
      <% end %>
    </p>
    <p>フォロー数：<%= user.following.count %></p>
    <p>フォロワー数：<%= user.followers.count %></p>
    <p>最終更新日：<%= user.spots.order(:updated_at).last.updated_at.strftime('%Y年%-m月%-d日') %></p>
    <% if current_user.present? && user != current_user %>
      <%= render "follow_relationships/list_follow_form", user: user %>
    <% end %>
  </div>
<% end %>

<%= paginate @users %>