<div>
    <h2>コメント</h2>
    <p>
      全<%= spot.comments.count %>件
    </p>
    <% spot.comments.each do |comment| %>
    <div id="comment-<%= comment.id %>">
      <%= attachment_image_tag comment.user, :profile_image, format: "jpeg", fallback: "noimage-1-760x460.png", size: "100x100" %>
      <%= link_to user_path(comment.user) do %>
        <%= comment.user.nickname %>
      <% end %>
      <%= comment.comment %>
      <%= comment.created_at.strftime("%Y年%-m月%-d日 %-H:%M") %>
      <% if comment.user_id == current_user.id %>
        <%= link_to "削除する", spot_comment_path(comment.spot, comment), method: :delete, remote: true %>
      <% end %>
    </div>
    <% end %>
  </div>

  <div id="comment-new">
    <h3>コメントをどうぞ</h3>
    <% if flash.now[:success] %>
      <%= flash.now[:success] %>
    <% elsif flash.now[:danger] %>
      <%= flash.now[:danger] %>
    <% end %>
    <%= form_with(model: [spot, Comment.new], remote: true) do |f| %>
      <%= f.text_area :comment, rows: '5', class: "comment-new-container" %>
      <%= f.submit "送信する" %>
    <% end %>
  </div>