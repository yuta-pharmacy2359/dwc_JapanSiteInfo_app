<div class="container px-5 mt-5 px-sm-0">

  <h2>パスワード変更</h2>

  <div class="row mt-3" style="margin-left: 0; margin-right: 0; padding-left: 0;">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <table class="table table-borderless input-form">
        <tr>
          <td><%= f.label "パスワード(英数字6文字以上)" %></td>
          <td><%= f.password_field :password, autofocus: true, autocomplete: "new-password" %></td>
        </tr>
        <tr>
          <td><%= f.label "パスワード(確認)" %></td>
          <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
        </tr>
      </table>
      <%= f.submit "パスワードを変更する", class: "btn btn-success my-5" %>
    <% end %>
  </div>
</div>

<%= render "devise/shared/links" %>

