<% if @user.errors.any? %>
  <div class="error_explanation alert alert-danger">
    <h2>
      <%= I18n.t("errors.messages.not_saved",
                 count: @user.errors.count,
                 resource: @user.class.model_name.human.downcase)
       %>
    </h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>